datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model File {
  id            Int      @id @default(autoincrement())
  content       String
  filePath      String   @unique
  fileHash      String
  latestVersion String
  latestRefresh DateTime @default(now()) @updatedAt
  tokens        Int
}

model Embedding {
  id         Int      @id @default(autoincrement())
  filePath   String
  chunkIndex Int
  content    String
  embedding  Int[]
  updatedAt  DateTime @default(now()) @updatedAt

  @@unique([filePath, chunkIndex])
}
