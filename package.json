{
	"name": "vercel-embeddings-generator",
	"version": "0.0.4",
	"private": true,
	"description": "A GitHub Action that converts your markdown files into embeddings and stores them in your Vercel Postgres database, allowing you to perform vector similarity search inside your documentation and website.",
	"main": "src/main.ts",
	"scripts": {
		"format": "pnpm dlx prettier --write '**/*.ts'",
		"format-check": "pnpm dlx prettier --check '**/*.ts'",
		"lint": "pnpm dlx eslint src/**/*.ts",
		"package": "ncc build ./src/main.ts --out action --source-map --license licenses.txt",
		"build": "pnpm run prisma:generate && ncc build ./src/main.ts --out action --source-map",
		"test": "jest",
		"prisma:generate": "pnpm dlx prisma generate",
		"all": "pnpm run format && pnpm run prisma:generate && pnpm run package",
		"db:check": "drizzle-kit check",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:pull": "drizzle-kit pull",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:up": "drizzle-kit up",
		"db:drop": "drizzle-kit drop"
	},
	"keywords": [
		"actions",
		"node",
		"setup"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@actions/core": "^1.11.1",
		"@ai-sdk/openai": "^1.0.20",
		"@jest/globals": "^29.7.0",
		"@prisma/client": "^6.2.1",
		"@vercel/postgres": "^0.10.0",
		"ai": "^4.0.39",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.36.4",
		"github-slugger": "^2.0.0",
		"gpt-tokenizer": "^2.8.1",
		"mdast": "^3.0.0",
		"mdast-util-from-markdown": "^2.0.2",
		"mdast-util-mdx": "^3.0.0",
		"mdast-util-to-markdown": "^2.1.2",
		"mdast-util-to-string": "^4.0.0",
		"micromark-extension-mdxjs": "^3.0.0",
		"openai": "^4.78.1",
		"pg": "^8.13.1",
		"unist-builder": "^4.0.0",
		"unist-util-filter": "^5.0.1",
		"uuid": "^11.0.5"
	},
	"devDependencies": {
		"@neondatabase/serverless": "^0.10.4",
		"@types/estree": "^1.0.6",
		"@types/node": "^22.10.7",
		"@types/pg": "^8.11.10",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/parser": "^8.20.0",
		"@vercel/ncc": "^0.38.3",
		"drizzle-kit": "^0.30.1",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-github": "^5.1.5",
		"eslint-plugin-jest": "^28.11.0",
		"jest": "^29.7.0",
		"js-yaml": "^4.1.0",
		"prettier": "^3.4.2",
		"prisma": "^6.2.1",
		"ts-jest": "^29.2.5",
		"tsx": "^4.19.2",
		"typescript": "5.7.3"
	}
}
